<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BB000000"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_ui_bg_progress"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelButton"
        style="@style/ChatUi.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:minWidth="125dp"
        android:text="@string/chat_ui_cancel"
        android:textColor="@color/chat_ui_button_text_white"
        android:textSize="14sp"
        android:textStyle="normal"
        app:backgroundTint="@color/chat_ui_button_bg_gray"
        app:cornerRadius="10dp"
        app:rippleColor="@color/chat_ui_white" />

</LinearLayout>